am=int(input('Введите количество чисел для анализа:'))
kol=0
ad=0
mox=0
for i in range(0,am):
    if ad<1000:
        ad=int(input('Введите число:'))
        if ad%2==0:
            kol=kol+1
            if ad>mox:
                mox=ad
if kol==0:
    print('ОШИБКА: Нет чётных чисел')
print('Количество чётных чисел:',' ',kol,' ','Максимальное чётное число:',' ',mox)
